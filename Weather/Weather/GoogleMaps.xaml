<Window x:Class="Weather.GoogleMaps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="GoogleMaps" Height="450" Width="800">
    <Grid>
        <gmap:GMapControl x:Name="gmapControl" Margin="10" Width="Auto" Height="Auto"/>
        <StackPanel Orientation="Horizontal" Width="250" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <TextBox x:Name="txtSearchCity" Width="180" Margin="0,0,5,0" VerticalContentAlignment="Center" BorderBrush="#CCCCCC" BorderThickness="1" Padding="5" Background="#FFCEC8C8" Opacity="0.7"/>
            <Button Content="Search" Click="SearchCity_ClickAsync" Background="#007ACC" Foreground="White" BorderBrush="#007ACC" BorderThickness="1"  Padding="5" Width="60"/>
        </StackPanel>




    </Grid>


</Window>
